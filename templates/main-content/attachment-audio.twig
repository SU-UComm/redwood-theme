{% extends "main-content/attachment.twig" %}

{% block title %}
  <h1>Audio information</h1>
{% endblock %}

{% block media %}
  <figure class="wp-block-audio aligncenter">
    <audio controls src="{{ post.link }}"></audio>
    {% if post.post_excerpt %}<figcaption>{{ post.post_excerpt }}</figcaption>{% endif %}
  </figure>
{% endblock %}

{% block mediainfo %}
  <dt>File type:</dt>
  <dd>{{ post.post_mime_type }}</dd>

  <dt>Title:</dt>
  <dd>{{ post.title }}</dd>

  <dt>Artist:</dt>
  <dd>{{ post.custom._wp_attachment_metadata.artist }}</dd>

  <dt>Album:</dt>
  <dd>{{ post.custom._wp_attachment_metadata.album }}</dd>
{% endblock %}
